@model Movie
@{
    ViewData["Title"] = "Movie Submission";
}

<h1>Movie Submission</h1>

<form method="post" class="container mt-4">
    <input type="hidden" asp-for="MovieId"/>
    
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select">
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Director" class="form-label">Director</label>
        <input asp-for="Director" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label">Year</label>
        <input asp-for="Year" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Movie Rating</label>
        <select asp-for="Rating" class="form-select">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG13">PG-13</option>
            <option value="R">R</option>
            <option value="NR">Not-Rated</option>
            <option value="UR">Un-Rated</option>
            <option value="TV-Y7">TV-Y7</option>
            <option value="TV-G">TV-G</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-14">TV-14</option>
            <option value="Other">Other</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="CopiedToPlex" class="form-label">Copied to Plex?</label>
        <select asp-for="CopiedToPlex" class="form-select">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="LentTo" class="form-label">Lent To</label>
        <input asp-for="LentTo" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Edited" class="form-label">Movie Edited?</label>
        <select asp-for="Edited" class="form-select">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control" rows="2" maxlength="25"></textarea>
        <small class="text-muted">Max 25 characters.</small>
    </div>

    <button type="submit" class="btn btn-primary w-100">Submit Application</button>

    <div asp-validation-summary="All"></div>
</form>
